fc=200;
f=[0 500];
Fs=1000;
FC=250;
N=1001;
x=[0:10];
wn=[2*fc/Fs, 2*FC/Fs];
b=fir1(N-1, wn,'bandpass',hanning(N));
t=fir1(N-1, wn,'bandpass',hamming(N));
k=fir1(N-1, wn,'bandpass',kaiser(N,10));

n = [1 : N];

[h1, f] = freqz(b, 1, 1000, Fs);
[h2, f] = freqz(t, 1, 1000, Fs);
[h3, f] = freqz(k, 1, 1000, Fs);

subplot 411; stem(n, b); grid; xlabel('n'); title('h(n)')
subplot 412; plot(f, 20*log10(abs(h1)));title('hanning')
subplot 413; plot(f, 20*log10(abs(h2)));title('hamming)')
subplot 414; plot(f, 20*log10(abs(h3)));title('kaiser')
